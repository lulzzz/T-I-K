<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <DockerComposeProjectPath>../../docker-compose.dcproj</DockerComposeProjectPath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(RunConfiguration)' == 'Default' ">
    <StartAction>Project</StartAction>
    <ExternalConsole>true</ExternalConsole>
    <ConsolePause>false</ConsolePause>
    <EnvironmentVariables>
      <Variable name="ASPNETCORE_ENVIRONMENT" value="Development" />
      <Variable name="TIK_IDENTITY_IP" value="127.0.0.1" />
      <Variable name="TIK_IDENTITY_PORT" value="5100" />
      <Variable name="TIK_IDENTITY_SERVICENAME" value="tik.identity" />
      <Variable name="TIK_IDENTITY_ENDPOINTS" value="http://localhost:5100" />
      <Variable name="CONSUL_HELPCHECK_TEMPLATE" value="/HealthCheck" />
      <Variable name="CONSUL_HTTP_ENPOINT" value="http://127.0.0.1:8500" />
      <Variable name="CONSUL_DNS_ADDRESS" value="127.0.0.1" />
      <Variable name="CONSUL_DNS_PORT" value="8600" />
    </EnvironmentVariables>
    <LaunchBrowser>false</LaunchBrowser>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.0" />
    <PackageReference Include="Consul" Version="0.7.2.3" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\TIK.Applications\TIK.Applications.csproj" />
    <ProjectReference Include="..\..\Core\TIK.Core\TIK.Core.csproj" />
    <ProjectReference Include="..\..\Domain\TIK.Domain\TIK.Domain.csproj" />
    <ProjectReference Include="..\..\Core\TIK.Persistance\TIK.Persistance.csproj" />
    <ProjectReference Include="..\..\Persistance\ElasticSearch\TIK.Persistance.ElasticSearch.csproj" />
    <ProjectReference Include="..\..\Applications\Identity\TIK.Applications.Identity.csproj" />
    <ProjectReference Include="..\..\Core\TIK.ProcessService\TIK.ProcessService.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
